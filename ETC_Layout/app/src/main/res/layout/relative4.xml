<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Relative4Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/editBase"
        android:layout_alignBaseline="@id/editBase"
        android:text="전화번호: "
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editBase"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="000-0000-0000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editBase"
        android:layout_toLeftOf="@+id/btnBase"
        android:background="#2196F3"
        android:layout_marginRight="10dp"
        android:text="입력"/>

    <Button
        android:id="@+id/btnBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editBase"
        android:layout_alignParentRight="true"
        android:background="#2196F3"
        android:text="취소" />

</RelativeLayout>